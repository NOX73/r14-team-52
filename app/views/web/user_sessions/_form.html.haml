= simple_form_for @user, url: user_sessions_path, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :email
  = error_span(@user[:email])
  = f.input :password
  = error_span(@user[:password])
  .form-group
    .col-sm-9.col-md-offset-3
      = f.button :submit, :class => 'btn-primary', value: t('.submit')
