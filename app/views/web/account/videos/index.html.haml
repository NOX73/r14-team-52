.container
  %h1= t('.title')

  = link_to t('.new_video'), new_video_path, class: "btn btn-primary"

  %br
  %br

  .row
    - @videos.each do |video|
      .col-md-4
        = link_to image_tag( "http://img.youtube.com/vi/#{video.youtube_video_id}/0.jpg", {class: "img-thumbnail"}), edit_video_url(video)
        %br
        .video-controls
          = link_to video_path(video), class: 'btn btn-default btn-sm' do
            %span.glyphicon.glyphicon-play-circle
            Show
          = link_to edit_video_path(video), class: 'btn btn-primary btn-sm' do
            %span.glyphicon.glyphicon-edit
            Edit
          = link_to video, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-sm' do
            %span.glyphicon.glyphicon-remove
            Destroy

  %br
  %br
  %br
  %br
  %br
